<%- include('../partials/headerWomens') %>

<div class="container">
    <div class="row">
        <!-- Post Content Column -->
        <div class="col-lg-8">
            <!-- Title -->
            <h1 class="mt-4"><%- posts[0].news_title %></h1>


            <!-- Author -->
            <p class="lead">
                by
                <a href="#"><%- posts[0].username %></a>
            </p>

            <hr />

            <!-- Date/Time -->
            <p>Posted on <%- posts[0].creation_date.toLocaleString()%></p>

            <hr />

            <hr />

            <!-- Post Content -->
            <div id="full-article">
                <%- posts[0].news_content.replace(/(\.\.\/)/g , 'http://www.canadiancyclist.com/') %>
            </div>

            <hr />
        </div>
    </div>
</div>
<!-- /.row -->
</div>

<%- include('../partials/footerWomens') %>
