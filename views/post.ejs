<%- include('partials/header') %>

<div class="container">
    <div class="row">
        <!-- Post Content Column -->
        <div class="col-lg-8">
            <!-- Title -->
            <h1 class="mt-4"><%- posts[0].news_title %></h1>

            <!-- Author -->
            <p class="lead">
                by
                <a href="#"><%- posts[0].username %></a>
            </p>

            <hr />

            <!-- Date/Time -->
            <p>Posted on <%- posts[0].creation_date.toLocaleString() %></p>

            <hr />

            <!-- Ad Banner -->
            <!-- Currently it only shows cc banner for client_id = 4 -->
            <% var ad = ads[Math.floor(Math.random() * ads.length)]; %>
            <a href="<%= ad.link %>">
                <img class="img-fluid" src="<%= 'http://www.canadiancyclist.com' + ad.banner_content %>"
                    alt="<%= ad.campaign_title %>" />
            </a>

            <hr />

            <!-- Post Content -->
            <div id="full-article">
                <%- posts[0].news_content.replace(/(\.\.\/)/g , 'http://www.canadiancyclist.com/') %>
            </div>

            <hr />
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for..." />
                        <span class="input-group-append">
                            <button class="btn btn-secondary" type="button">
                                Go!
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <%- include('partials/footer') %>