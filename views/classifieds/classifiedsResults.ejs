<%- include('../partials/header') %>
<div class="container">
    <section id="main p-0 ">
        <div class="cont mb-3">
            <div id="list p-0 m-0">
                <!--Article Lists-->
                <h3 class="text-center list-group-item list-group-item-action flex-column align-items-start post bg-light">Search Results for <%- search %></h3>
                <h5 class="text-center list-group-item list-group-item-action flex-column align-items-start post bg-light">Showing <%- posts.length  %> Results</h5>

                <div class="container mb-5 pb-3 pt-3 bg-light">

                    <% posts.forEach((post, index) => { %>
                    <!-- Title -->
                    <hr />
                    <h2 class="mt-4"><%- post.class_title %></h2>
                    <hr />

                    <div id="full-article">
                        <%- post.class_content %>
                    </div>
                    
                    <br />
                     <p><span class="font-weight-bold">Price: </span><%- post.class_price %></p>
                     <p><span class="font-weight-bold">Contact: </span><%- post.class_name %></p>
                     <p><span class="font-weight-bold">Phone: </span><%- post.class_phone %></p>
                     <p><span class="font-weight-bold">Email: </span><%- post.class_email %></p>
                     <p><span class="font-weight-bold">Posted: </span><%- post.class_date %></p>
        
                    <% }) %>
                    <hr />
                </div>                      
            </div>
        </div>
    </section>
</div>
</div>

<%- include('../partials/footer') %>
